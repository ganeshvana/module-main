             <td style="border-left:hidden;border-right:hidden;border-top:hidden;border-bottom:hidden;font-size:12px">
             GSTIN :&#160;<span t-esc="doc.company_id.vat"/>
         </td>

         </tr>   

        </table>            
   
 
      </div>
        </t> 
     </template>
     
    <template id="inward_report_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="oi_sale_quotation.report_inward_report_template" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
